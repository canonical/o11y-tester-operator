{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting",
    ":automergeMinor",
    ":automergePr",
  ],
  "schedule": ["* 1-5 * * 2"],  // Tuesday 01:00-05:00 UTC
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["* 1-5 * * 2"],  // Tuesday 01:00-05:00 UTC
    "automerge": true,
  },
  "timezone": "Etc/UTC",
  "labels": [],
  "enabledManagers": ["github-actions", "custom.regex"],
  "packageRules": [],
  "customManagers": [
    // Update OCI images in charmcraft.yaml
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)charmcraft\\.yaml$/"],
      "matchStrings": [
        "upstream-source: (?<depName>.*?)@(?<currentDigest>sha256:[0-9a-f]+) +# renovate: oci-image tag: (?<currentValue>.*?)\n"
      ],
      "datasourceTemplate": "docker",
    }
  ]
}
