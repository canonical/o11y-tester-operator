{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting",
    ":automergeMinor",
    ":automergePr",
  ],
  "schedule": ["* 8-11 * * 1"],  // Monday 08:00-11:00 UTC
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
  },
  "timezone": "Etc/UTC",
  "labels": [],
  "enabledManagers": ["pep621", "custom.regex"],
  "packageRules": [
    // Enable automerge for minor and patch docker updates
    {
      "matchManagers": ["custom:regex"],
      "matchDatasources": ["docker"],
      "automerge": true
    },
    {
      "matchManagers": ["custom:regex"],
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    // Group all Python lockfile updates in one PR
    {
      "matchManagers": ["pep621"],
      "rangeStrategy": "bump",
      "groupName": "Python dependencies",
    },
    // Prevent Renovate from bumping the Python version
    {
      "matchManagers": ["pep621"],
      "matchDepTypes": ["dependencies"],
      "matchDepNames": ["python"],
      "enabled": false,
    }
  ],
  "customManagers": [
    // Update OCI images in charmcraft.yaml
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)charmcraft\\.yaml$/"],
      "matchStrings": [
        "upstream-source: (?<depName>.*?)@(?<currentDigest>sha256:[0-9a-f]+) +# renovate: oci-image tag: (?<currentValue>.*?)\n"
      ],
      "datasourceTemplate": "docker",
    }
  ]
}
